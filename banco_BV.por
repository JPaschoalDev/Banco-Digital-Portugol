programa {

//DEFINIR BIBLIOTECA USADA NO CÓDIGO (UTIL)
   inclua biblioteca Util --> saldo

  funcao inicio() {

    //DEFINIÇÕES DE VARIÁVEIS
    inteiro operacao,saldo_aleat,saldof,num1,conversao,moeda_est
   

    //DEFINIR SALDO VARIÁVEL PARA TODAS OPERAÇÕES
    saldo_aleat = saldo.sorteia(44,12000)

    //DEFINIÇÃO DE OPÇÕES PARA MENU DE INÍCIO DO "BANCO"
    escreva("\n")
    escreva("=========== B.V. BANCO VANGUARDA ===========\n")
    escreva("[1] VER SALDO\n")
    escreva("[2] DEPOSITAR\n")
    escreva("[3] SACAR\n")
    escreva("[4] CONVERSÃO\n")
    escreva("[5] SAIR\n")
    escreva("OPÇÃO SELECIONADA: ")
    leia(operacao)
    
    //DEFININDO CADA CONDICIONAL DAS OPÇÕES DO MENU
    //OPÇÃO 1 [SALDO]
    se(operacao==1){
      escreva("==========================================\n")
      escreva("O SEU SALDO ATUAL:\n")
      escreva("=== R$ ",saldo_aleat," ===\n")
      inicio()
      }
  //OPÇÃO 2 [DEPÓSITO]
    se(operacao==2){
      escreva("==========================================\n")
      escreva("SALDO DISPONIVEL:R$ ",saldo_aleat,"\n")
      escreva("VALOR A DEPOSITAR:\n")
      escreva("R$ ")
      leia(num1)
      saldof=saldo_aleat+num1
      escreva("O SEU SALDO ATUAL: R$",saldof,"\n")
      inicio()
      }
  //OPÇÃO 3 [SACAR]   
    se(operacao==3){
      escreva("==========================================\n")
      escreva("SALDO DISPONIVEL: ",saldo_aleat,"\n")
      escreva("VALOR A SACAR:\n")
      escreva("R$ ")
      leia(num1)
      saldof = saldo_aleat-num1
      
      //DEFININDO CONDICIONAIS PARA VALOR NEGATIVO E POSITIVO (MAIOR E MENOR QUE ZERO)
      se(saldof <0 ){
        escreva("==========VALOR INSUFICIENTE==========\n")
        escreva("\n")
        	inicio()}
      senao
      	escreva("=====VALOR RETIRADO=====\n")
      	escreva("\n")
      	escreva("SEU NOVO SALDO É DE: R$",saldof,"\n")
      	escreva("\n")
      	inicio()}

   //OPÇÃO 4 [CONVERSÃO]
   se(operacao==4){
   	escreva("==========================================\n")
     escreva("SALDO DISPONIVEL: ",saldo_aleat,"\n")
     escreva("GOSTARIA DE CONVERTER EM QUAL MOEDA\n")
     escreva("[1] DÓLAR (Cotação atual: R$5.00)\n")
     escreva("[2] EURO (Cotação atual: R$6.00)\n")
     escreva("[3] LIBRA (Cotação atual: R$7.00)\n")
     escreva("OPÇÃO SELECIONADA: ")
     leia(conversao)
     
     //CONVERSÃO PARA MOEDAS ESTRANGEIRAS DOLAR(USD)
     se(conversao==1){
     	escreva("========== DÓLAR ==========\n")
     	escreva("SALDO DISPONIVEL:R$ ",saldo_aleat,"\n")
     	escreva("DEFINA O VALOR A SER CONVERTIDO:R$")
     	leia(num1)
     	se(num1>saldo_aleat){
     		escreva("\nOPERAÇÃO INVÁLIDA")
     		escreva("\n")
     		inicio()
     		}
     		senao{
     		escreva("\n")
     	     moeda_est = num1/5
     	     escreva("VOCÊ ACABA DE CONVERTER R$",num1," EM DÓLAR, VALOR RECEBIDO: $",moeda_est,"\n")}
     	     escreva("\n")
     	     inicio()
     	     }
     	     
     //CONVERSÃO PARA MOEDAS ESTRANGEIRAS EURO(EUR)
     se(conversao==2){
     	escreva("========== EURO ==========\n")
     	escreva("SALDO DISPONIVEL:R$ ",saldo_aleat,"\n")
     	escreva("DEFINA O VALOR A SER CONVERTIDO:R$")
     	leia(num1)
     	se(num1>saldo_aleat){
     		escreva("\nOPERAÇÃO INVÁLIDA")
     		escreva("\n")
     		inicio()
     		}
     		senao{
     		escreva("\n")
     	     moeda_est = num1/6
     	     escreva("VOCÊ ACABA DE CONVERTER R$",num1," EM EURO, VALOR RECEBIDO: €",moeda_est,"\n")}
     	     escreva("\n")
     	     inicio()
     	     }
     	     
    //CONVERSÃO PARA MOEDAS ESTRANGEIRAS LIBRA(GBP)
    se(conversao==3){
     	escreva("========== LIBRA ==========\n")
     	escreva("SALDO DISPONIVEL: R$ ",saldo_aleat,"\n")
     	escreva("DEFINA O VALOR A SER CONVERTIDO: R$")
     	leia(num1)
     	se(num1>saldo_aleat){
     		escreva("\nOPERAÇÃO INVÁLIDA")
     		escreva("\n")
     		inicio()
     		}
     		senao{
     		escreva("\n")
     	     moeda_est = num1/7
     	     escreva("VOCÊ ACABA DE CONVERTER R$",num1," EM LIBRA, VALOR RECEBIDO: £",moeda_est,"\n")}
     	     escreva("\n")
     	     inicio()
     	     }
   	}
   	//CONDICIONAIS PARA SAIR DO SISTEMA E DÍGITOS DIFERENTES DO MENU INICIAL
   	se (operacao>5 ou operacao <1){
   		escreva("\n=====OPÇÃO INVÁLIDA=====")
   		escreva("\n")
   		inicio()
   		}
    se (operacao==5){
    	escreva("\n=====ENCERRANDO SISTEMA BANCÁRIO=====\n")
    	}
 }
}
